<details data-ruliweb-hots-version="{{appVersion}}" class="ruliweb-hots-skill-table">
{{/isForHeroTable}}
{{/isTalent}}
  <summary class="ruliweb-hots-skill-table__icon-cell"
    style="width: {{iconSize}}px; height: {{iconSize}}px; background: url({{&iconUrl}}) center/cover"
    title="[클릭하여 접기/펼치기] {{#isTalent}}{{name}} ({{typeNameLong}} - 레벨 {{level}}){{/isTalent}}{{^isTalent}}{{typeName}} - {{name}}{{/isTalent}}"
    ></summary>
  <div class="ruliweb-hots-skill-table__content" style="max-width: calc(100% - {{iconSize}}px - 8px)">
    <div class="ruliweb-hots-skill-table__header">
      <div class="ruliweb-hots-skill-table__title-box">
        <b class="ruliweb-hots-skill-table__title">{{name}}</b>
        {{^isForHeroTable}}<br><small>{{heroName}}{{#isTalent}} - 레벨 {{level}}{{/isTalent}}</small>{{/isForHeroTable}}
      </div>
      <div class="ruliweb-hots-skill-table__type">
        {{#isTypeClassBasic}}  <b class="ruliweb-hots-skill-type-label">{{/isTypeClassBasic}}
        {{#isTypeClassHeroic}} <b class="ruliweb-hots-skill-type-label ruliweb-hots-skill-type-label--heroic"> {{/isTypeClassHeroic}}
        {{#isTypeClassPassive}}<b class="ruliweb-hots-skill-type-label ruliweb-hots-skill-type-label--passive">{{/isTypeClassPassive}}
        {{#isTypeClassActive}} <b class="ruliweb-hots-skill-type-label ruliweb-hots-skill-type-label--active"> {{/isTypeClassActive}}
          {{#upgradeFor}}
            {{#isTypeClassBasic}}  <img class="ruliweb-hots-skill-type-label__upgrade-arrow" src="http://i1.ruliweb.com/img/18/08/07/1651405095119dc2c.png" alt="능력 강화" title="능력 강화">{{/isTypeClassBasic}}
            {{#isTypeClassHeroic}} <img class="ruliweb-hots-skill-type-label__upgrade-arrow" src="http://i2.ruliweb.com/img/18/08/07/1651405069c19dc2c.png" alt="능력 강화" title="능력 강화">{{/isTypeClassHeroic}}
            {{#isTypeClassPassive}}<img class="ruliweb-hots-skill-type-label__upgrade-arrow" src="http://i1.ruliweb.com/img/18/08/07/1651405088419dc2c.png" alt="능력 강화" title="능력 강화">{{/isTypeClassPassive}}
            {{#isTypeClassActive}} <img class="ruliweb-hots-skill-type-label__upgrade-arrow" src="http://i3.ruliweb.com/img/18/08/11/165246b734f19dc2c.png" alt="능력 강화" title="능력 강화">{{/isTypeClassActive}}
          {{/upgradeFor}}
          {{typeName}}
        {{#isTypeClassBasic}}  </b>{{/isTypeClassBasic}}
        {{#isTypeClassHeroic}} </b>{{/isTypeClassHeroic}}
        {{#isTypeClassPassive}}</b>{{/isTypeClassPassive}}
        {{#isTypeClassActive}} </b>{{/isTypeClassActive}}
      </div>
    </div>
    <div class="ruliweb-hots-skill-table__description">
      {{#isSimpleSkillTable}}{{{shortDescription}}}{{/isSimpleSkillTable}}
      {{^isSimpleSkillTable}}{{{description}}}{{> stats}}{{/isSimpleSkillTable}}
    </div>
    {{#hotsVersion}}<footer class="hots-version"><i>패치 {{hotsVersion}}</i></footer>{{/hotsVersion}}
  </div>
{{#isTalent}}
</details>
