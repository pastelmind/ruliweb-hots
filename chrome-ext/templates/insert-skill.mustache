{{/isTalent}}
  <summary class="ruliweb-hots-skill-table__icon-cell"
    style="width: {{iconSize}}px; height: {{iconSize}}px; background: url({{&iconUrl}}) center/cover"
    title="[클릭하여 접기/펼치기] {{#isTalent}}{{name}} ({{typeNameLong}} - 레벨 {{level}}){{/isTalent}}{{^isTalent}}{{typeName}} - {{name}}{{/isTalent}}"
    ></summary>
  <div class="ruliweb-hots-skill-table__content" style="max-width: calc(100% - {{iconSize}}px - 8px)">
    <div class="ruliweb-hots-skill-table__header">
      <div class="ruliweb-hots-skill-table__title-box">
        <b class="ruliweb-hots-skill-table__title">{{name}}</b>
        {{^isForHeroTable}}<br><small>{{heroName}}{{#isTalent}} - 레벨 {{level}}{{/isTalent}}</small>{{/isForHeroTable}}
      </div>
      {{#isTypeClassBasic}}  <div class="ruliweb-hots-skill-table__type">                                        {{/isTypeClassBasic}}
      {{#isTypeClassHeroic}} <div class="ruliweb-hots-skill-table__type ruliweb-hots-skill-table__type--heroic"> {{/isTypeClassHeroic}}
      {{#isTypeClassPassive}}<div class="ruliweb-hots-skill-table__type ruliweb-hots-skill-table__type--passive">{{/isTypeClassPassive}}
      {{#isTypeClassActive}} <div class="ruliweb-hots-skill-table__type ruliweb-hots-skill-table__type--active"> {{/isTypeClassActive}}
        {{#upgradeFor}}
        <img class="ruliweb-hots-skill-type-label__upgrade-arrow" alt="능력 강화" title="능력 강화"
          src="{{#isTypeClassBasic}}http://i1.ruliweb.com/img/18/08/07/1651405095119dc2c.png{{/isTypeClassBasic}}{{#isTypeClassHeroic}}http://i2.ruliweb.com/img/18/08/07/1651405069c19dc2c.png{{/isTypeClassHeroic}}{{#isTypeClassPassive}}http://i1.ruliweb.com/img/18/08/07/1651405088419dc2c.png{{/isTypeClassPassive}}{{#isTypeClassActive}}http://i3.ruliweb.com/img/18/08/11/165246b734f19dc2c.png{{/isTypeClassActive}}"
          >
        {{/upgradeFor}}
        <b class="ruliweb-hots-skill-type-label">{{typeName}}</b>
      {{#isTypeClassBasic}}  </div>{{/isTypeClassBasic}}
      {{#isTypeClassHeroic}} </div>{{/isTypeClassHeroic}}
      {{#isTypeClassPassive}}</div>{{/isTypeClassPassive}}
      {{#isTypeClassActive}} </div>{{/isTypeClassActive}}
    </div>
    <div class="ruliweb-hots-skill-table__description">
      {{#isSimpleSkillTable}}{{{shortDescription}}}{{/isSimpleSkillTable}}
      {{^isSimpleSkillTable}}{{{description}}}{{> stats}}{{/isSimpleSkillTable}}
    </div>
    {{#hotsVersion}}<footer class="hots-version"><i>패치 {{hotsVersion}}</i></footer>{{/hotsVersion}}
  </div>
{{#isTalent}}
