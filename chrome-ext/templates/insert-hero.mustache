<details data-ruliweb-hots-version="{{appVersion}}" class="ruliweb-hots-hero-table">
  <summary class="ruliweb-hots-hero-table__icon-cell" style="background: url({{iconUrl}}) center/64px no-repeat" title="[클릭하여 접기/펼치기] {{name}} - {{type}} {{roleName}}"></summary>
  <div class="ruliweb-hots-hero-table__content">
    <div class="ruliweb-hots-hero-table__header">
      <div class="ruliweb-hots-hero-table__title">{{name}}</div>
      <div class="ruliweb-hots-hero-table__type">{{type}} {{roleName}}</div>
    </div>
    <div class="ruliweb-hots-hero-table__description">
      {{#skills}}
      <img style="WIDTH: 48px; margin: 0 .25em" src="{{{iconUrl}}}" alt="{{type}} - {{name}}" title="{{type}} - {{name}}">
      {{/skills}}{{#hotsVersion}}
      <div class="hots-version">패치 {{hotsVersion}}</div>{{/hotsVersion}}
    </div>
  </div>
</details>