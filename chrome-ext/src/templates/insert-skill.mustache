<div style="display: flex; border: 2px solid #85d; border-right-WIDTH: 1px; max-WIDTH: 60em; box-sizing: border-box; font-family: sans-serif">
  <div style="border-right: 1px solid #85d; WIDTH: 64px; padding: .5em; background-color: #418">
    <img style="WIDTH: 100%" src="{{{iconUrl}}}" alt="{{type}} - {{name}}" title="{{type}} - {{name}}">
  </div>
  <div style="flex: 1; display: flex; flex-flow: column">
    <div style="display: flex; flex-wrap: wrap; background-color: #102; text-align: center; color: #ebf">
      <b style="flex: 3 18em; border: solid #85d; border-WIDTH: 0 1px 1px 0; padding: .5em">{{name}}</b>
      <b style="flex: 1 6em; border: solid #85d; border-WIDTH: 0 1px 1px 0; padding: .5em">{{type}}</b>
    </div>
    <div style="flex: 1; border-right: 1px solid #85d; padding: .5em; background-color: #213; color: #efe">
      {{{description}}}
      {{> stats}}
      {{#hotsVersion}}<i style="display: block; text-align: right; font-size: .8em; color: #cca">패치 {{hotsVersion}}</i>{{/hotsVersion}}
    </div>
  </div>
</div>