{
  "manifest_version": 2,
  "name": "루리웹 히어로즈 오브 더 스톰 공략툴",
  "version": "0.3.0",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "alarms"
  ],
  "background": {
    "scripts": [
      "js/axios.js",
      "js/init.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.ruliweb.com/*/write",
        "*://*.ruliweb.com/*/modify/*"
      ],
      "css": [
        "css/tingle.css",
        "css/ruliweb-hots.css"
      ],
      "js": [
        "js/axios.js",
        "js/tingle.js",
        "js/mustache.js",
        "js/hots-dialog.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "images/*",
    "css/images/*"
  ],
  "icons": {
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "minimum_chrome_version": "55"
}