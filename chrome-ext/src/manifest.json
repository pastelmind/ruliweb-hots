{
  "manifest_version": 2,
  "name": "루리웹 히어로즈 오브 더 스톰 공략툴",
  "version": "0.5.0",
  "description": "루리웹에 글을 쓸 때 히오스 영웅들의 기술과 특성 정보를 표 모양으로 입력해 주는 툴입니다.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "alarms"
  ],
  "background": {
    "scripts": [
      "js/decorate-hots-data.js",
      "js/init.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.ruliweb.com/*/write",
        "*://*.ruliweb.com/*/modify/*",
        "*://mypi.ruliweb.com/write*"
      ],
      "css": [
        "css/tingle.css",
        "css/ruliweb-hots.css"
      ],
      "js": [
        "js/tingle.js",
        "js/mustache.js",
        "js/hots-dialog.js",
        "js/templates.js"
      ]
    },
    {
      "matches": [
        "*://*.ruliweb.com/*/write",
        "*://*.ruliweb.com/*/modify/*",
        "*://mypi.ruliweb.com/write*"
      ],
      "match_about_blank": true,
      "all_frames": true,
      "css": [
        "css/editor-iframe.css"
      ],
      "js": [
        "js/editor-iframe.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "images/*"
  ],
  "icons": {
    "16": "icons/RuHeros_01_16.png",
    "48": "icons/RuHeros_01_48.png",
    "128": "icons/RuHeros_01_128.png"
  },
  "minimum_chrome_version": "55"
}