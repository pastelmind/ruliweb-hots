{
  "manifest_version": 2,
  "name": "루리웹 히어로브 오브 더 스톰 공략툴",
  "version": "0.1",

  "permissions": ["contextMenus", "activeTab", "storage", "alarms"],
  "background": {
    "scripts": ["js/jquery.js", "js/init.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.ruliweb.com/*/write", "*://*.ruliweb.com/*/modify/*"],
      "css": ["css/jquery-ui.css", "css/ruliweb-hots.css"],
      "js": ["js/jquery.js", "js/jquery-ui.js", "js/mustache.js"]
    }
  ],
  "web_accessible_resources": ["images/*", "css/images/*"],

  "icons": {
    "128": "icons/icon-128.png",
    "48": "icons/icon-48.png"
  }
}