{
  "name": "ruliweb-hots",
  "version": "0.3.0",
  "description": "A Chrome extension that assists in creating and posting Heroes of the Storm guides on Ruliweb.com",
  "scripts": {
    "test": "mocha util/tests/ chrome-ext/tests/",
    "build": "npm run build:prep-dir && npm run build:zip-extension",
    "build:prep-dir": "DEL build\\*.zip & @MKDIR build & @ECHO done > NUL",
    "build:zip-extension": "PowerShell -Command Compress-Archive -Path chrome-ext/src/* -Force -CompressionLevel Optimal -DestinationPath build/ruliweb-hots.%npm_package_version%.zip",
    "namu:crawl": "node util/crawl-namu.js",
    "env": "SET",
    "version": "node util/update-manifest.js && git add ./chrome-ext/src/manifest.json",
    "postinstall": "npm run -s update:jquery && npm run -s update:mustache && npm run -s update:tingle.js",
    "update:jquery": "COPY /B node_modules\\jquery\\dist\\jquery.min.js chrome-ext\\src\\js\\jquery.js",
    "update:mustache": "COPY /B node_modules\\mustache\\mustache.min.js chrome-ext\\src\\js\\mustache.js",
    "update:tingle.js": "COPY /B node_modules\\tingle.js\\dist\\tingle.min.js chrome-ext\\src\\js\\tingle.js && COPY /B node_modules\\tingle.js\\dist\\tingle.min.css chrome-ext\\src\\css\\tingle.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pastelmind/ruliweb-hots.git"
  },
  "author": "pastelmind",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/pastelmind/ruliweb-hots/issues"
  },
  "homepage": "https://github.com/pastelmind/ruliweb-hots#readme",
  "devDependencies": {
    "mocha": "^5.2.0"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "commander": "^2.16.0",
    "html-entities": "^1.2.1",
    "jquery": "^3.3.1",
    "mustache": "^2.3.0",
    "tingle.js": "^0.13.2"
  }
}
