{
  "name": "ruliweb-hots",
  "version": "0.7.0",
  "description": "A Chrome extension that assists in creating and posting Heroes of the Storm guides on Ruliweb.com",
  "scripts": {
    "test": "npm run -s validate-data && mocha ./api-server/tests/ ./chrome-ext/tests/",
    "prebuild": "npm run -s build:templates && npm test -s",
    "build": ": do nothing",
    "postbuild": "rm -rf ./build/* && mkdir -p ./build && npm run -s build:zip-extension",
    "build:templates": "node ./chrome-ext/build-templates.js",
    "build:zip-extension": "PowerShell -Command Compress-Archive -Path \"./chrome-ext/src/*\" -Force -CompressionLevel Optimal -DestinationPath ./build/ruliweb-hots.$npm_package_version.zip",
    "watch": "watch 'npm run -s build:templates' ./chrome-ext/templates/ --wait=3 --interval=1 &",
    "crawl-namu": "node ./api-server/crawl-namu.js",
    "preversion": "npm run -s prebuild",
    "version": "node ./scripts/update-manifest.js && git add ./chrome-ext/src/manifest.json",
    "postversion": "npm run -s postbuild",
    "postinstall": "npm run -s create-hard-links && npm run -s prebuild",
    "create-hard-links": "npm run -s create-hard-links:hots.json && npm run -s create-hard-links:mustache && npm run -s create-hard-links:tingle.js && npm run -s create-hard-links:microtip",
    "create-hard-links:hots.json": "ln -f ./docs/hots.json ./chrome-ext/src/data/hots.json",
    "create-hard-links:mustache": "ln -f ./node_modules/mustache/mustache.min.js ./chrome-ext/src/js/mustache.js",
    "create-hard-links:tingle.js": "ln -f ./node_modules/tingle.js/dist/tingle.min.js ./chrome-ext/src/js/tingle.js && ln -f ./node_modules/tingle.js/dist/tingle.min.css ./chrome-ext/src/css/tingle.css",
    "create-hard-links:microtip": "ln -f ./node_modules/microtip/microtip.min.css ./chrome-ext/src/css/microtip.css",
    "validate-data": "node ./api-server/validate-data.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pastelmind/ruliweb-hots.git"
  },
  "author": "pastelmind",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/pastelmind/ruliweb-hots/issues"
  },
  "homepage": "https://github.com/pastelmind/ruliweb-hots#readme",
  "dependencies": {
    "ajv": "^6.5.2",
    "axios": "^0.18.0",
    "html-entities": "^1.2.1",
    "html-minifier": "^3.5.19",
    "juice": "^4.3.1",
    "microtip": "^0.2.2",
    "mocha": "^5.2.0",
    "mustache": "^2.3.0",
    "tingle.js": "^0.13.2"
  },
  "devDependencies": {
    "commander": "^2.16.0",
    "watch": "^1.0.2"
  }
}
