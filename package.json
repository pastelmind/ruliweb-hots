{
  "name": "ruliweb-hots",
  "version": "0.4.0",
  "description": "A Chrome extension that assists in creating and posting Heroes of the Storm guides on Ruliweb.com",
  "scripts": {
    "test": "mocha ./util/tests/ ./chrome-ext/tests/",
    "build": "npm run -s update-dep && npm run -s build:prep-dir && npm run -s build:zip-extension",
    "build:prep-dir": "rm -rf ./build/* && mkdir -p ./build",
    "build:zip-extension": "PowerShell -Command Compress-Archive -Path \"./chrome-ext/src/*\" -Force -CompressionLevel Optimal -DestinationPath ./build/ruliweb-hots.$npm_package_version.zip",
    "crawl-namu": "node ./util/crawl-namu.js",
    "preversion": "npm test",
    "version": "node ./util/update-manifest.js && git add ./chrome-ext/src/manifest.json",
    "postinstall": "npm run -s update-dep",
    "update-dep": "npm run update-dep:axios && npm run update-dep:mustache && npm run update-dep:tingle.js",
    "update-dep:axios": "cp -f ./node_modules/axios/dist/axios.min.js ./chrome-ext/src/js/axios.js",
    "update-dep:mustache": "cp -f ./node_modules/mustache/mustache.min.js ./chrome-ext/src/js/mustache.js",
    "update-dep:tingle.js": "cp -f ./node_modules/tingle.js/dist/tingle.min.js ./chrome-ext/src/js/tingle.js && cp -f ./node_modules/tingle.js/dist/tingle.min.css ./chrome-ext/src/css/tingle.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pastelmind/ruliweb-hots.git"
  },
  "author": "pastelmind",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/pastelmind/ruliweb-hots/issues"
  },
  "homepage": "https://github.com/pastelmind/ruliweb-hots#readme",
  "devDependencies": {
    "juice": "^4.3.1",
    "mocha": "^5.2.0",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "commander": "^2.16.0",
    "html-entities": "^1.2.1",
    "mustache": "^2.3.0",
    "tingle.js": "^0.13.2"
  }
}
