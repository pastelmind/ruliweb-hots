{
  "name": "ruliweb-hots",
  "version": "0.11.0",
  "description": "A Chrome extension that assists in creating and posting Heroes of the Storm guides on Ruliweb.com",
  "type": "module",
  "scripts": {
    "test": "npm run -s validate-data && mocha",
    "prebuild": "npm run -s build:templates && npm test -s",
    "build": ": do nothing",
    "postbuild": "rm -rf ./build/* && mkdir -p ./build && npm run -s build:zip",
    "build:templates": "node ./chrome-ext/build-templates.js",
    "build:zip": "node ./chrome-ext/build-zip.js",
    "watch": "npx watch 'npm run -s build:templates' ./chrome-ext/templates/ --wait=3 --interval=1 &",
    "preversion": "npm run -s prebuild",
    "version": "node ./scripts/update-manifest.js && git add ./chrome-ext/src/manifest.json",
    "postversion": "npm run -s postbuild",
    "postinstall": "npm run -s link-dep && npm run -s generate-types && npm run -s prebuild",
    "generate-types": "node ./scripts/generate-types.js",
    "link-dep": "npm run -s link-dep:htm && npm run -s link-dep:mustache && npm run -s link-dep:preact && npm run -s link-dep:tingle.js && npm run -s link-dep:microtip",
    "link-dep:htm": "ln -f ./node_modules/htm/dist/htm.module.js ./chrome-ext/src/js/vendor/htm.js",
    "link-dep:mustache": "ln -f ./node_modules/mustache/mustache.mjs ./chrome-ext/src/js/vendor/mustache.js",
    "link-dep:preact": "ln -f ./node_modules/preact/dist/preact.module.js ./chrome-ext/src/js/vendor/preact.js",
    "link-dep:tingle.js": "ln -f ./node_modules/tingle.js/dist/tingle.min.js ./chrome-ext/src/js/vendor/tingle.js && ln -f ./node_modules/tingle.js/dist/tingle.min.css ./chrome-ext/src/css/vendor/tingle.css",
    "link-dep:microtip": "ln -f ./node_modules/microtip/microtip.min.css ./chrome-ext/src/css/vendor/microtip.css",
    "lint": "eslint . && tsc -p jsconfig.json",
    "validate-data": "node ./api/validate-data.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pastelmind/ruliweb-hots.git"
  },
  "author": "pastelmind",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/pastelmind/ruliweb-hots/issues"
  },
  "homepage": "https://github.com/pastelmind/ruliweb-hots#readme",
  "dependencies": {
    "@testing-library/preact": "^2.0.1",
    "ajv": "^6.12.6",
    "htm": "^3.0.4",
    "htmlparser2": "^5.0.1",
    "jsdom": "^16.4.0",
    "jsdom-global": "^3.0.2",
    "json-schema-to-typescript": "^9.1.1",
    "juice": "^7.0.0",
    "microtip": "^0.2.2",
    "mocha": "^8.2.1",
    "mustache": "^4.0.1",
    "preact": "^10.5.7",
    "should": "^13.2.3",
    "should-sinon": "0.0.6",
    "sinon": "^9.2.1",
    "snap-shot-it": "^7.9.3",
    "tingle.js": "^0.15.3",
    "yazl": "^2.5.1"
  },
  "devDependencies": {
    "@types/chrome": "0.0.126",
    "@types/firefox-webext-browser": "^82.0.0",
    "@types/jsdom": "^16.2.5",
    "@types/jsdom-global": "^3.0.2",
    "@types/mocha": "^8.0.4",
    "@types/mustache": "^4.0.1",
    "@types/prettier": "^2.1.5",
    "@types/should-sinon": "0.0.8",
    "@types/sinon": "^9.0.9",
    "@types/tingle.js": "^0.13.1",
    "@types/yazl": "^2.4.2",
    "commander": "^6.2.0",
    "eslint": "^7.14.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.2.1",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=12"
  }
}
