{
  "name": "ruliweb-hots",
  "version": "0.8.0",
  "description": "A Chrome extension that assists in creating and posting Heroes of the Storm guides on Ruliweb.com",
  "scripts": {
    "test": "npm run -s validate-data && mocha ./api/tests/ ./chrome-ext/tests/",
    "prebuild": "npm run -s build:templates && npm test -s",
    "build": ": do nothing",
    "postbuild": "rm -rf ./build/* && mkdir -p ./build && npm run -s build:zip",
    "build:templates": "node ./chrome-ext/build-templates.js",
    "build:zip": "node ./chrome-ext/build-zip.js",
    "watch": "watch 'npm run -s build:templates' ./chrome-ext/templates/ --wait=3 --interval=1 &",
    "crawl-namu": "node ./api/crawl-namu.js",
    "preversion": "npm run -s prebuild",
    "version": "node ./scripts/update-manifest.js && git add ./chrome-ext/src/manifest.json",
    "postversion": "npm run -s postbuild",
    "postinstall": "npm run -s link-dep && npm run -s prebuild",
    "link-dep": "npm run -s link-dep:mustache && npm run -s link-dep:tingle.js && npm run -s link-dep:microtip",
    "link-dep:mustache": "ln -f ./node_modules/mustache/mustache.min.js ./chrome-ext/src/js/mustache.js",
    "link-dep:tingle.js": "ln -f ./node_modules/tingle.js/dist/tingle.min.js ./chrome-ext/src/js/tingle.js && ln -f ./node_modules/tingle.js/dist/tingle.min.css ./chrome-ext/src/css/tingle.css",
    "link-dep:microtip": "ln -f ./node_modules/microtip/microtip.min.css ./chrome-ext/src/css/microtip.css",
    "validate-data": "node ./api/validate-data.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pastelmind/ruliweb-hots.git"
  },
  "author": "pastelmind",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/pastelmind/ruliweb-hots/issues"
  },
  "homepage": "https://github.com/pastelmind/ruliweb-hots#readme",
  "dependencies": {
    "ajv": "^6.5.4",
    "axios": "^0.18.0",
    "html-entities": "^1.2.1",
    "html-minifier": "^3.5.20",
    "juice": "^4.3.2",
    "microtip": "^0.2.2",
    "mocha": "^5.2.0",
    "mustache": "^2.3.2",
    "tingle.js": "^0.13.2",
    "yazl": "^2.4.3"
  },
  "devDependencies": {
    "commander": "^2.19.0",
    "watch": "^1.0.2"
  }
}
